package com.examples.myproject;

public class Singleton {
	
	private static Singleton obj;
	
	//Make the constructor private
	private Singleton(){}
	
	//static method to return the singleton instance
	private static Singleton getInstance(){		
		if(obj == null){
			synchronized(obj){
				if(obj == null)
					obj = new Singleton();
			}
		}
		
		return obj;
	}

}
